<body>

<h1>ðŸ’— Monthly Budget Overview ðŸ’—</h1>

<div class="container">

  <!-- LEFT COLUMN -->
  <div class="card">
    <h2>Income & Allocation</h2>

    <label>Monthly Income (Â£)</label>
    <input type="number" id="income" value="350" />

    <label>Fixed Costs (Â£)</label>
    <input type="number" id="fixed" value="50" />

    <label>Savings (Â£)</label>
    <input type="number" id="savings" value="30" />

    <button onclick="updateBudget()">Update Budget</button>

    <canvas id="budgetChart"></canvas>
  </div>

  <!-- RIGHT COLUMN -->
  <div class="card">
    <h2>Fixed Costs Checklist</h2>
    <ul id="fixedList">
      <li><input type="checkbox" onclick="togglePaid(this)"> Phone Bill</li>
      <li><input type="checkbox" onclick="togglePaid(this)"> Contact Lenses</li>
    </ul>

    <input type="text" id="newFixed" placeholder="Add new fixed cost" />
    <button onclick="addFixedCost()">Add</button>

    <hr />

    <h2>Savings</h2>
    <ul>
      <li><input type="checkbox" onclick="togglePaid(this)"> Monthly Savings Sent</li>
    </ul>

    <hr />

    <h2>Disposable / Wishlist</h2>
    <ul id="wishList"></ul>

    <input type="text" id="newWish" placeholder="Add wishlist item" />
    <button onclick="addWish()">Add</button>
  </div>
</div>

<script>
  let chart;

  function updateBudget() {
    const income = Number(document.getElementById("income").value);
    const fixed = Number(document.getElementById("fixed").value);
    const savings = Number(document.getElementById("savings").value);
    const disposable = income - fixed - savings;

    const data = {
      labels: ["Fixed Costs", "Savings", "Disposable"],
      datasets: [{
        data: [fixed, savings, disposable],
        backgroundColor: ["#ffb3c6", "#f783ac", "#faa2c1"]
      }]
    };

    if (chart) chart.destroy();

    chart = new Chart(document.getElementById("budgetChart"), {
      type: "pie",
      data: data
    });
  }

  function togglePaid(checkbox) {
    checkbox.parentElement.classList.toggle("paid");
  }

  function addFixedCost() {
    const text = document.getElementById("newFixed").value;
    if (!text) return;

    const li = document.createElement("li");
    li.innerHTML = `<input type="checkbox" onclick="togglePaid(this)"> ${text}`;
    document.getElementById("fixedList").appendChild(li);
    document.getElementById("newFixed").value = "";
  }

  function addWish() {
    const text = document.getElementById("newWish").value;
    if (!text) return;

    const li = document.createElement("li");
    li.textContent = text;
    document.getElementById("wishList").appendChild(li);
    document.getElementById("newWish").value = "";
  }

  updateBudget();
</script>

